#!/bin/bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Remote server details
REMOTE_SERVER=""
REMOTE_PATH="/usr/local/bin"

# Local build details
BUILD_DIR="bin"
BINARY_NAME="grendel"

# Default to build mode if no argument specified
MODE="build"
if [ $# -lt 1 ] || [ $# -gt 2 ]; then
   echo -e "${RED}Usage: $0 <mode> [remote_server]${NC}"
   exit 1
fi

MODE=$1
if [ $# -eq 2 ]; then
   REMOTE_SERVER=$2
fi

if [ "$MODE" != "build" ] && [ "$MODE" != "release" ]; then
   echo -e "${RED}Invalid mode. Use 'build' or 'release'${NC}"
   exit 1
fi

if [ -z "$REMOTE_SERVER" ]; then
   echo -e "${RED}Remote server must be specified${NC}"
   exit 1
fi

echo -e "${BLUE}üîß Running in ${MODE} mode${NC}"

# Add timestamp function
format_timestamp() {
    date "+%B %d, %Y at %I:%M%p %Z"
}

# Clear screen and add blank lines
clear
echo
echo

echo -e "${BLUE}üöÄ Starting Build $(format_timestamp)...${NC}"

# Create bin directory if it doesn't exist
if [ ! -d "$BUILD_DIR" ]; then
    echo -e "${YELLOW}üìÅ Creating build directory...${NC}"
    if ! mkdir -p "$BUILD_DIR"; then
        echo -e "${RED}‚ùå Failed to create build directory${NC}"
        exit 1
    fi
fi

# Clean any existing binary
if [ -f "$BUILD_DIR/$BINARY_NAME" ]; then
    echo -e "${YELLOW}üßπ Cleaning old binary...${NC}"
    if ! rm "$BUILD_DIR/$BINARY_NAME"; then
        echo -e "${RED}‚ùå Failed to remove old binary${NC}"
        exit 1
    fi
fi

# Run go mod tidy first
echo -e "${BLUE}üì¶ Running go mod tidy...${NC}"
if ! go mod tidy; then
    echo -e "${RED}‚ùå go mod tidy failed${NC}"
    exit 1
fi

# Create tag name before using it
TAG_FILE=".last_tag"
if [ "$MODE" == "release" ]; then
    if [ ! -f "$TAG_FILE" ]; then
        echo -e "${RED}‚ùå Cannot perform release: $TAG_FILE does not exist${NC}"
        echo -e "${RED}You are not able to build and release${NC}"
        exit 1
    fi

    if ! LAST_TAG=$(cat "$TAG_FILE"); then
        echo -e "${RED}‚ùå Failed to read tag file${NC}"
        exit 1
    fi
    TAG_NAME=$((LAST_TAG + 1))

    # Save the new tag number only in release mode
    if ! echo "$TAG_NAME" > "$TAG_FILE"; then
        echo -e "${RED}‚ùå Failed to write to tag file${NC}"
        exit 1
    fi

    # Update banner date in logger.go before building
    echo -e "${BLUE}üìÖ Updating banner date...${NC}"
    TODAY=$(date "+%b %-d, %Y")
    sed -i "s/Updated [A-Z][a-z]\{2\} [0-9]\{1,2\}, [0-9]\{4\}/Updated ${TODAY}/" logger/logger.go

    echo -e "${BLUE}üî¢ Updating build number...${NC}"
    BUILD=$(cat .last_tag)
    sed -i "s/Build [0-9]\{1,3\}/Build ${BUILD}/" logger/logger.go
else
    # In build mode, just read the current tag without incrementing
    if [ -f "$TAG_FILE" ]; then
        if ! TAG_NAME=$(cat "$TAG_FILE"); then
            echo -e "${RED}‚ùå Failed to read tag file${NC}"
            exit 1
        fi
    else
        echo -e "${YELLOW}‚ö†Ô∏è  No tag file found - using version from logger.go${NC}"
        # Don't set TAG_NAME as we'll use whatever is in the files already
    fi
fi

# Copy files to remote
echo -e "${YELLOW}üì§ Copying CUDA files to remote...${NC}"
if ! rsync -av --exclude='libkeygen.so' gpu/keygen/ "${REMOTE_SERVER}:~/keygen/" >/dev/null 2>&1; then
    echo -e "${RED}‚ùå Failed to copy CUDA files to remote${NC}"
    echo -e "${RED}‚ùå Are you sure rsync is installed on remote?${NC}"
    exit 1
fi

# CUDA environment variables
export PATH=/opt/cuda/bin:$PATH
export LD_LIBRARY_PATH=/opt/cuda/lib64:$LD_LIBRARY_PATH
export CUDA_HOME=/opt/cuda
export C_INCLUDE_PATH=$CUDA_HOME/include:$C_INCLUDE_PATH
export CPLUS_INCLUDE_PATH=$CUDA_HOME/include:$CPLUS_INCLUDE_PATH
export CGO_CFLAGS="-I/opt/cuda/include"
export CGO_LDFLAGS="-L/opt/cuda/lib64 -lcudart"

# Define check_cuda function
check_cuda() {
    if [ -d "/opt/cuda" ] && [ -f "/opt/cuda/lib64/libcudart.so" ]; then
        return 0  # CUDA is installed
    else
        return 1  # CUDA is not installed
    fi
}

# Build on remote
echo -e "${BLUE}üî® Building CUDA library on remote...${NC}"
if ! ssh "${REMOTE_SERVER}" "cd ~/keygen && make clean && make" >/dev/null 2>&1; then
    echo -e "${RED}‚ùå Remote CUDA build failed${NC}"
    # Show the actual error output
    ssh "${REMOTE_SERVER}" "cd ~/keygen && make clean && make"
    exit 1
fi

# Copy to system lib directory on remote and run ldconfig
echo -e "${YELLOW}üì¶ Installing CUDA library on remote...${NC}"
if ! ssh "${REMOTE_SERVER}" "cp ~/keygen/libkeygen.so /usr/local/lib/ && ldconfig" >/dev/null 2>&1; then
    echo -e "${RED}‚ùå Failed to install CUDA library on remote${NC}"
    exit 1
fi

# Copy back to local
echo -e "${BLUE}üì• Copying CUDA library back to local...${NC}"
if ! scp "${REMOTE_SERVER}:~/keygen/libkeygen.so" /usr/local/lib >/dev/null 2>&1; then
    echo -e "${RED}‚ùå Failed to copy CUDA library back to local${NC}"
    exit 1
fi

echo -e "${GREEN}‚úÖ CUDA library build complete${NC}"

echo

echo -e "${BLUE}üî® Building binary...${NC}"
if check_cuda; then
    # Build with CUDA support
    if ! CGO_ENABLED=1 NVCCFLAGS="-shared -Xcompiler -fPIC --std=c++11 -O3 -arch=sm_89 --use_fast_math -maxrregcount 64 -Xptxas -O3,-v" \
        go build -tags "opencl,cuda,profile" -ldflags "-r /opt/cuda/lib64" -o "$BUILD_DIR/$BINARY_NAME" .; then
        echo -e "${RED}‚ùå Build failed${NC}"
        exit 1
    fi
    echo -e "${GREEN}‚úÖ Built binary with CUDA support${NC}"
else
    # Build without CUDA support
    if ! CGO_ENABLED=0 \
        go build -tags "opencl" -ldflags "-s -w" -o "$BUILD_DIR/$BINARY_NAME" .; then
        echo -e "${RED}‚ùå Build failed${NC}"
        exit 1
    fi
    echo -e "${GREEN}‚úÖ Built binary without CUDA support${NC}"
fi


# Get binary size
BINARY_SIZE=$(find "$BUILD_DIR" -name "$BINARY_NAME" -printf "%s" | numfmt --to=iec-i --suffix=B)
echo -e "${GREEN}‚úÖ Build successful! Binary size: ${BINARY_SIZE}${NC}"

if [ "$MODE" == "release" ]; then
    # Prompt for change description
    echo -e "${RED}üìù Enter a description of the changes (press Enter when done):${NC}"
    echo -n "(msg) ~ "
    read -r CHANGE_DESCRIPTION

    # Commit and push changes
    echo -e "${BLUE}üìù Committing changes...${NC}"
    if ! git commit -am "Build ${TAG_NAME}: ${CHANGE_DESCRIPTION}" >/dev/null 2>&1; then
        echo -e "${RED}‚ùå Failed to commit changes${NC}"
        git status
        exit 1
    fi

    echo -e "${BLUE}üöÄ Pushing changes...${NC}"
    if ! git push origin HEAD >/dev/null 2>&1; then
        echo -e "${RED}‚ùå Failed to push changes${NC}"
        git status
        exit 1
    fi

    # Create and push Git tag
    echo -e "${BLUE}üè∑Ô∏è  Creating Git tag: ${TAG_NAME}...${NC}"
    if ! git tag "${TAG_NAME}" >/dev/null 2>&1; then
        echo -e "${RED}‚ùå Failed to create tag${NC}"
        git tag -l
        exit 1
    fi

    if ! git push origin "${TAG_NAME}" >/dev/null 2>&1; then
        echo -e "${RED}‚ùå Failed to push tag${NC}"
        git tag -d "${TAG_NAME}"
        exit 1
    fi

    echo -e "${GREEN}‚úÖ Tag created and pushed!${NC}"
fi

# Deploy to remote server
echo -e "${BLUE}üì§ Deploying to ${REMOTE_SERVER}...${NC}"
if ! scp "$BUILD_DIR/$BINARY_NAME" "${REMOTE_SERVER}:${REMOTE_PATH}" >/dev/null 2>&1; then
    echo -e "${RED}‚ùå Deployment failed${NC}"
    exit 1
fi

echo -e "${GREEN}‚úÖ Deployment successful!${NC}"

# Cleanup local binary only if not in release mode
if [ "$MODE" != "release" ]; then
    echo -e "${YELLOW}üßπ Cleaning up local binary...${NC}"
    if ! rm "$BUILD_DIR/$BINARY_NAME"; then
        echo -e "${RED}‚ö†Ô∏è  Failed to remove local binary${NC}"
    else
        echo -e "${GREEN}‚úÖ Local binary cleaned up${NC}"
    fi
else
    # In release mode, copy libkeygen.so to bin directory
    echo -e "${BLUE}üì¶ Copying libkeygen.so to bin directory...${NC}"
    if ! cp /usr/local/lib/libkeygen.so "$BUILD_DIR/"; then
        echo -e "${RED}‚ö†Ô∏è  Failed to copy libkeygen.so to bin directory${NC}"
    else
        echo -e "${GREEN}‚úÖ libkeygen.so copied to bin directory${NC}"
    fi

    echo -e "${GREEN}‚úÖ Release artifacts saved in bin directory${NC}"
fi

echo -e "${GREEN}üéâ Build and deploy completed!${NC}"

# Print final status
echo -e "\n${BLUE}üìã Summary:${NC}"
echo -e "  üïí $(format_timestamp)"
echo -e "  üìç $BUILD_DIR/$BINARY_NAME"
echo -e "  üì¶ $BINARY_SIZE"
echo -e "  üéØ ${REMOTE_SERVER}:${REMOTE_PATH}/${BINARY_NAME}"
if [ "$MODE" == "release" ] || [ -n "${TAG_NAME:-}" ]; then
    echo -e "  üè∑Ô∏è  Tag: ${TAG_NAME}"
fi
echo -e "  ‚åõ $(format_timestamp)"

# fin
